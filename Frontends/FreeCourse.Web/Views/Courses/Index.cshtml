@model List<CourseViewModel>


<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurslar</h5>
                @if (Model.Any())
                {

                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Kurs isim</th>
                                <th>Qiymət</th>
                                <th>Müddət</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td></td>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Feature.Duration</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="aret alert-info">
                        Qeydə alınan kurs yoxdur
                    </div>
                }
            </div>
        </div>
    </div>
</div>